cc_defaults {
    name: "xllvm-lib-defaults",
    vendor_available: true,
    defaults: ["xllvm-defaults"],
    cflags: [
        "-W",
        "-Wall",
        "-Wno-unused-lambda-capture",
        "-Wno-unused-parameter",
    ],
    export_header_lib_headers: ["xllvm-headers"],
    target: {
        windows: {
            enabled: true,
        },
    },
}

subdirs = ["*"]
